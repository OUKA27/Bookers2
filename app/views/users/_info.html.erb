<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <table class="table">
          <tr>
            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %>
          </tr>
          <tr>
            <td><h4>name</h4></td>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <td><h4>introduction</h4></td>
            <td><%= user.introduction %></td>
          </tr>
        </table>
        <div class='row'>
              <a><%= link_to ' ', edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></a>
        </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:book, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success btn-sm"  %>
      </div>
      <% end %>
    </div>