<%= form_with model:@user, local:true do |f| %>
  <% if @user.errors.any? %>
    <%= @user.errors.count %>error prohibited this obj from being saved
    <%= @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %>
        </div>
        <div class="form-group">
          <label>Image</label>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, autofocus:true, id:"inputIntroduction", class: "form-control" %>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>



